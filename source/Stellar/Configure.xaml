                 Margin="105,85,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="287" 
                 IsReadOnly="True" 
                 PreviewMouseDown="textBoxLogConfig_PreviewMouseDown" 
                 Foreground="White" 
                 Background="Black" 
                 ToolTip="Path to save log"/>

        <!-- Log Revert Button -->
        <Button x:Name="buttonLogAuto"
                Style="{DynamicResource ButtonStyleQuickBrowse}" 
                HorizontalAlignment="Left"
                Margin="399,83,0,0" 
                VerticalAlignment="Top" 
                Width="23" 
                Foreground="White" 
                Background="Transparent" 
                BorderThickness="0"
                Height="23" 
                Cursor="Hand"
                ToolTip="Clear Path" Click="buttonLogAuto_Click">
            <Image Source="Resources/Images/Buttons/revertarrow.png" 
                   Width="9" 
                   Height="11" 
                   Stretch="Fill"
