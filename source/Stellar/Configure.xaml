                HorizontalAlignment="Left"
                Margin="399,48,0,0" 
                VerticalAlignment="Top"
                Width="23" 
                Foreground="White"
                Background="Transparent" 
                BorderThickness="0"
                Height="23"
                Cursor="Hand" 
                ToolTip="Revert to Auto" 
                Click="buttonWinRARAuto_Click">
            <Image Source="Resources/Images/Buttons/revertarrow.png" 
                   Width="9" 
                   Height="11" 
                   Stretch="Fill"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   Margin="1,0,0,0"/>
