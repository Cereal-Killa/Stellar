        <Button x:Name="buttonClearAllSavedSettings"
                Style="{DynamicResource ButtonCustom}"
                HorizontalAlignment="Left"
                Margin="262,157,0,0" 
                VerticalAlignment="Top"
                Width="75" 
                Background="Black" 
                Foreground="White" 
                BorderBrush="White" 
                Height="23"
                ToolTip="Reset Saved Settings"
                Cursor="Hand" 
                Click="buttonClearAllSavedSettings_Click" >
            <TextBlock 
                Text="Reset" 
                Margin="0,-1,0,0"/>
