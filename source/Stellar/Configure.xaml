               HorizontalAlignment="Left" 
               Margin="10,154,0,0"
               VerticalAlignment="Top" 
               Height="26" 
               Foreground="White" 
               ToolTip="Path to Save Log" Width="90"/>
        <ToggleButton x:Name="tglUpdateAutoCheck"
